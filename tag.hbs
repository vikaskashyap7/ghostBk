    --}} 
    <section class="outer">
    <div class="inner posts">
        {{!-- <div>
            <li class="nav-item mx-2 mt-2 mt-lg-0 btn-group ms-auto">
                    <button type="button" class="btn btn-outline-danger dropdown-toggle dropstart" data-bs-toggle="dropdown"
                        aria-expanded="false" id="lang_dropdown">
                        {{#is "#page,insights,post,tag"}}
                         Select Language
                        {{else}}
